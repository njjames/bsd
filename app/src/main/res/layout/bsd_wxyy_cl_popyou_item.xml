<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_30"
    android:minHeight="@dimen/qb_px_30"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bad_wxyy_cl_you_tv1"
        android:layout_weight="1.2"
        style="@style/mysearchinfostyle"
        android:text="材料名称" />

    <TextView
        android:id="@+id/bad_wxyy_cl_you_tv2"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="单价" />

    <TextView
        android:id="@+id/bad_wxyy_cl_you_tv3"
        android:layout_weight="0.5"
        style="@style/mysearchinfostyle"
        android:text="单位" />

    <com.example.administrator.boshide2.Modular.View.MarqueeView
        android:id="@+id/bsd_mv_cl_cx"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/biankuang_info_bg"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColorHint="#B1B0B0"
        android:textSize="14sp"
        android:text="车型"/>

    <TextView
        android:id="@+id/bad_wxyy_cl_you_tv4"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="图号" />

    <TextView
        android:id="@+id/bad_wxyy_cl_you_tv6"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="库存" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/biankuang_info_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_subtract"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_30"
            android:layout_weight="1"
            android:padding="@dimen/qb_px_4"
            android:src="@drawable/ic_subtract" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_30"
            android:layout_weight="1"
            android:padding="@dimen/qb_px_4"
            android:src="@drawable/ic_add_solid"/>
    </LinearLayout>
</LinearLayout>
