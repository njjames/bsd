<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bsd_zcdd_renyuanfenpei"
    android:orientation="vertical"
    android:paddingLeft="@dimen/qb_px_8"
    android:paddingRight="@dimen/qb_px_8">

    <TextView
        android:id="@+id/bsd_zcdd_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/qb_px_10"
        android:text="项目派工"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/qb_px_4">

        <LinearLayout
            android:id="@+id/rl_query"
            style="@style/myeditlinearlayoutstyle">

            <TextView
                android:id="@+id/textView7"
                style="@style/myeditinfonamestyle"
                android:text="姓名:" />

            <EditText
                android:id="@+id/et_pg_query"
                style="@style/myeditinfovaluestyle"
                android:hint="请输入员工姓名" />

        </LinearLayout>

        <Button
            android:id="@+id/but_pg_query"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:background="@drawable/cundang"
            android:text="查询"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="#F7714C"
        android:layout_marginTop="@dimen/qb_px_4"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_34"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="员工"
            android:textColor="#444"/>

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="部门"
            android:textColor="#444"/>

        <TextView
            android:layout_weight="0.5"
            style="@style/mysearchtitlestyle"
            android:text="选择"
            android:textColor="#444"/>
    </LinearLayout>

    <ListView
        android:id="@+id/bsd_zcdd_pg_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="#F7714C" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/qb_px_4"
        android:paddingBottom="@dimen/qb_px_4">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_32"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_toLeftOf="@id/btn_cancel"
            android:background="@drawable/cundang"
            android:text="确认派工"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_32"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/qb_px_10"
            android:background="@drawable/cundang"
            android:text="取消"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>
