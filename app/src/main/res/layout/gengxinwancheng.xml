<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banbai">


    <ImageView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:src="@mipmap/jianchagengxin" />


    <TextView
        android:id="@+id/bsd_xiugaimma_shang"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="已是最新版本，无需更新。"
        android:textColor="#7E7E7F"
        android:textSize="18sp" />

    <View
        android:id="@+id/xiahong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bsd_xiugaimma_shang"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#F7714C" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xiahong"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="返回"
        android:textColor="#F7714C"
        android:textSize="18dp" />


</RelativeLayout>
