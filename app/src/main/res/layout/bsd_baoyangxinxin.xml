<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banbai">


    <LinearLayout
        android:id="@+id/ll_fdjyp_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center">
        <ImageView
            android:id="@+id/textView1"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y50"
            android:scaleType="fitXY"
            android:src="@mipmap/jianchagengxin" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/bsd_bycx_chexingming"
        android:layout_below="@+id/ll_fdjyp_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bsd_queren_neirong"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/x5"
                android:text="车型名称"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bsd_bycx_tv_chexing"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x5"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/x5"
                android:text="品牌名称"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bsd_bycx_tv_pinpai"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:lines="1"
                android:gravity="center"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/x5"
                android:text="车系名称"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bsd_bycx_tv_chexi"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x5"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:text="基础油成分"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bsd_bycx_tv_youchengfen"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/x5"
                android:gravity="center"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:text="油品等级"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bsd_bycx_tv_youpindengji"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y65">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:text="粘度级别"
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bsd_bycx_tv_niandujibie"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center"
                android:text=""
                android:textColor="#7E7E7F"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/xiahong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bsd_bycx_chexingming"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:background="#F7714C" />

    <TextView
        android:id="@+id/bsd_queren_queren"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xiahong"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:background="@drawable/biankuang_title_bg"
        android:text="确认"
        android:textColor="#F7714C"
        android:textSize="18sp" />


</RelativeLayout>
