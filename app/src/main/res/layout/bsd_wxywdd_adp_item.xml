<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_32"
    android:minHeight="@dimen/qb_px_32"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bsd_xsbj_name"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="员工"/>

    <TextView
        android:id="@+id/bsd_xsbj_gongshi"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="工时" />

    <TextView
        android:id="@+id/bsd_xsbj_je"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="金额" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_32"
        android:src="@drawable/ic_delete_maincolor"
        android:padding="@dimen/qb_px_8"
        android:background="@drawable/biankuang_info_bg" />
</LinearLayout>
