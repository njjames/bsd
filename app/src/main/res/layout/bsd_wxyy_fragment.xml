<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_title_back_no_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bodyshangyuan"
        android:orientation="vertical"
        android:paddingLeft="@dimen/qb_px_4"
        android:paddingRight="@dimen/qb_px_4"
        android:paddingTop="@dimen/qb_px_6">

        <LinearLayout
            android:id="@+id/bsd_wxyy_top_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relativeLayout7"
                style="@style/myeditlinearlayoutstyle">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/myeditinfonamestyle"
                    android:text="车牌:" />

                <TextView
                    android:id="@+id/bsd_wxyy_cp"
                    style="@style/myeditinfovaluestyle"
                    android:hint="请输入车牌号" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pinpai"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/myeditinfonamestyle"
                    android:text="品牌:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_top_pinpai"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择品牌" />

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chexi"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/myeditinfonamestyle"
                    android:text="车系:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_top_chexi"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车系" />

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chezu"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textView16"
                    style="@style/myeditinfonamestyle"
                    android:text="车组:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_top_chezu"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车组" />

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chexing"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/myeditinfonamestyle"
                    android:text="车型:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_top_chexing"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车型" />

                <ImageView
                    android:id="@+id/iv4"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bsd_wxyy_top_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relativeLayout20"
                style="@style/myeditlinearlayoutstyle">

                <TextView
                    android:id="@+id/textView13"
                    style="@style/myeditinfonamestyle"
                    android:text="VIN:" />

                <EditText
                    android:id="@+id/bsd_wxyy_top_vin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入VIN号"
                    android:textColorHint="#B1B0B0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_readvin"
                    style="@style/myeditreadbtnstyle"
                    android:text="读取" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_wxyy_rl_daochangshijian"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView88"
                    style="@style/myeditinfonamestyle"
                    android:text="时间:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_top_daochangshijian"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="到场时间" />

                <ImageView
                    android:id="@+id/iv5"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout9"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/myeditinfonamestyle"
                    android:text="里程:" />

                <EditText
                    android:id="@+id/bsd_wxyy_top_jinchanglicheng"
                    style="@style/myeditinfovaluestyle"
                    android:hint="本次进厂里程"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout10"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/myeditinfonamestyle"
                    android:text="司机/车主:" />

                <EditText
                    android:id="@+id/bsd_wxyy_top_chezhusiji"
                    style="@style/myeditinfovaluestyle"
                    android:hint="姓名" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout12"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView11"
                    style="@style/myeditinfonamestyle"
                    android:text="电话:" />

                <EditText
                    android:id="@+id/bsd_wxyy_top_dianhua"
                    style="@style/myeditinfovaluestyle"
                    android:hint="请输入手机号"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bsd_wxyy_top_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bsd_wxyy_rl_gcsj"
                style="@style/myeditlinearlayoutstyle">

                <TextView
                    android:id="@+id/bsd_ksbj_t1_gcsj"
                    style="@style/myeditinfonamestyle"
                    android:text="购车时间:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxyy_tv_gcsj"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="选购车时间" />

                <ImageView
                    android:id="@+id/iv7"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_wxyy_rl_gsfl"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_weight="1.2">

                <TextView
                    android:id="@+id/textView142"
                    style="@style/myeditinfonamestyle"
                    android:text="工时费率:" />

                <TextView
                    android:id="@+id/bsd_wxyy_tv_gsfl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="          "
                    android:textColorHint="#B1B0B0"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv8"
                    style="@style/myeditdowimgstyle" />
            </LinearLayout>

            <TextView
                android:id="@+id/bsd_wxyy_rl_bycx"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.8"
                android:text="保养查询" />

            <TextView
                android:id="@+id/bsd_wxyy_clxx"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.8"
                android:text="车辆信息" />

            <TextView
                android:id="@+id/bsd_wxyy_lswx"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.8"
                android:text="历史维修" />

            <TextView
                android:id="@+id/bsd_wxyy_lswxjy"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.8"
                android:text="历史维修建议"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_add_wxxm"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="1"
                android:text="添加维修项目" />

            <TextView
                android:id="@+id/tv_add_wxcl"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="1"
                android:text="添加维修用料" />

            <TextView
                android:id="@+id/bsd_ksbj_jc"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.5"
                android:text="进厂" />

            <TextView
                android:id="@+id/bsd_wxyy_cundang"
                style="@style/myeditnormalbtnstyle"
                android:layout_weight="0.5"
                android:text="确认预约" />

            <LinearLayout
                style="@style/myeditlinearlayoutstyle"
                android:layout_weight="1.2"
                android:layout_marginLeft="@dimen/qb_px_10">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/myeditinfonamestyle"
                    android:text="总计:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_wxyy_zongji"
                    style="@style/myeditinfovaluestyle"
                    android:text=""
                    android:textColor="#F7714C"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/bsd_on_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginTop="@dimen/qb_px_4"
            android:background="#F7714C" />

        <LinearLayout
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bsd_rl_xuanxiang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_30"
                android:orientation="horizontal">

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1.2"
                    android:text="项目" />

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="工时" />

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="工时单价" />

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="金额" />


                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="状态" />

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="操作" />
            </LinearLayout>

            <ListView
                android:id="@+id/bsd_wxyy_xm_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_26"
                android:background="@drawable/bsd_xiamianyuan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:text="合计:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bsd_wxyy_xm_zj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    android:text="元"
                    android:textColor="#F7714C"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/bsd_onzhongjian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="#F7714C"
            android:layout_marginTop="@dimen/qb_px_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bsd_rl_xuanxiang1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1.2"
                    style="@style/mysearchtitlestyle"
                    android:text="材料名称" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="数量" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="单价" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="单位" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="金额" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="操作" />

                <TextView
                    android:layout_weight="1"
                    style="@style/mysearchtitlestyle"
                    android:text="查看库存" />
            </LinearLayout>

            <ListView
                android:id="@+id/bsd_wxyy_cl_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_26"
                android:background="@drawable/bsd_xiamianyuan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/qb_px_10"
                    android:text="合计:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bsd_wxyy_cl_zj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    android:text="元"
                    android:textColor="#F7714C"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/content_footer_layout" />
</LinearLayout>
