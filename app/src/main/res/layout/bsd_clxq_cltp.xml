<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/qb_px_4">

      <LinearLayout
          android:id="@+id/ll_upload"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/qb_px_30"
          android:gravity="center_vertical"
          android:background="@drawable/btn_round_bg_grey"
          android:layout_marginLeft="@dimen/qb_px_10">

          <ImageView
              android:layout_width="@dimen/qb_px_30"
              android:layout_height="@dimen/qb_px_30"
              android:src="@drawable/ic_upload"
              android:padding="@dimen/qb_px_2"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="上传图片"
              android:textSize="16sp"
              android:layout_marginRight="@dimen/qb_px_4"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_delete"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/qb_px_30"
          android:gravity="center_vertical"
          android:background="@drawable/btn_round_bg_grey"
          android:layout_marginLeft="@dimen/qb_px_10">

          <ImageView
              android:layout_width="@dimen/qb_px_30"
              android:layout_height="@dimen/qb_px_30"
              android:src="@drawable/ic_delete"
              android:padding="@dimen/qb_px_4"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="删除图片"
              android:textSize="16sp"
              android:layout_marginRight="@dimen/qb_px_4"/>
      </LinearLayout>
  </LinearLayout>

<WebView
    android:id="@+id/bsd_cxq_wbweb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/qb_px_2"/>

</LinearLayout>
