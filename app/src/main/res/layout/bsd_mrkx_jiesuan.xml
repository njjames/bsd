<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bsd_log_wangzhezhilu"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10"
    android:paddingTop="@dimen/qb_px_20"
    android:paddingBottom="@dimen/qb_px_20">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/qb_px_10"
        android:paddingRight="@dimen/qb_px_10">

        <LinearLayout
            android:id="@+id/bsd_wzll_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="合计金额："
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_xche_hjje"
                style="@style/myeditinfovaluestyle"
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bsd_wzll_zh"
                style="@style/myeditinfonamestyle"
                android:text="维修项目优惠金额:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_xmyhje"
                style="@style/myeditinfovaluestyle"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bsd_wzll_zh3"
                style="@style/myeditinfonamestyle"
                android:text="维修材料优惠金额："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_clyhje"
                style="@style/myeditinfovaluestyle"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="应收金额："
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_xche_ysje"
                style="@style/myeditinfovaluestyle"
                android:background="@null"
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@drawable/bsd_chepaiyuan"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bsd_wzll_zh5"
                style="@style/myeditinfonamestyle"
                android:text="实收金额："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_xche_ssje"
                style="@style/myeditinfovaluestyle"
                android:background="@null"
                android:textColor="#000000"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buxianjin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="补现金："
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_buxianjin"
                style="@style/myeditinfovaluestyle"
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/qb_px_10"
        android:paddingRight="@dimen/qb_px_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bsd_wzll_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:background="@drawable/bsd_chepaiyuan"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bsd_wzzl_ip"
                style="@style/myeditinfonamestyle"
                android:text="会员卡号："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cardno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/bsd_wzzl_js_duqu"
                android:layout_width="@dimen/qb_px_80"
                style="@style/myeditreadbtnstyle"
                android:text="读取"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_20"
            android:background="@drawable/bsd_chepaiyuan"
            android:gravity="center_vertical">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="密        码："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cardpass"
                style="@style/myeditinfovaluestyle"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_33"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_20"
            android:background="@drawable/bsd_chepaiyuan"
            android:gravity="center_vertical">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="剩余金额："
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cardleftje"
                style="@style/myeditinfovaluestyle"
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_wzll_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_46"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_10" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:text="使用储值卡结算"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsd_mrkx_qrjs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/qb_px_10">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_44"
                android:background="@drawable/bsd_log_wzzzl_queren_quxiao"
                android:gravity="center"
                android:text="确认结算"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/qb_px_100"
                android:layout_height="@dimen/qb_px_44"
                android:layout_marginLeft="@dimen/qb_px_50"
                android:background="@drawable/bsd_log_wzzzl_queren_quxiao"
                android:gravity="center"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
