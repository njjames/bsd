<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_back_gr"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="保养查询"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:padding="@dimen/qb_px_4"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关   闭"
            android:textColor="#F7714C"
            android:background="@drawable/jinchang"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_6"
            android:paddingTop="@dimen/qb_px_6"
            android:paddingBottom="@dimen/qb_px_6"
            android:paddingLeft="@dimen/qb_px_12"
            android:paddingRight="@dimen/qb_px_12"
            android:textSize="16sp"
            android:layout_margin="@dimen/qb_px_2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/qb_px_4">

        <LinearLayout
            style="@style/myeditlinearlayoutstyle">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="remark:"/>

            <TextView
                android:id="@+id/bsd_bycx_top1_tv"
                style="@style/myeditinfovaluestyle" />
        </LinearLayout>

        <LinearLayout
            style="@style/myeditlinearlayoutstyle"
            android:layout_marginLeft="@dimen/qb_px_10">

            <TextView
                style="@style/myeditinfonamestyle"
                android:text="byState:"/>

            <TextView
                android:id="@+id/bsd_bycx_top_tv"
                style="@style/myeditinfovaluestyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/bsd_bycx_youpin"
            style="@style/myeditnormalbtnstyle"
            android:layout_weight="0.2"
            android:text="发动机油品"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/button"
        android:layout_marginTop="@dimen/qb_px_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_30"
        android:layout_below="@+id/bsd_bycx_top_tv"
        android:orientation="horizontal">

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="保养公里" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1.5"
            android:text="保养项目名称" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1.5"
            android:text="原厂零件号" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="0.8"
            android:text="单位" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="保养用量" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="指导价钱" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="工时费" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="合计金额" />
    </LinearLayout>

    <ListView
        android:id="@+id/bsd_bycx_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>