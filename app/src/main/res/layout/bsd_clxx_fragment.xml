<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <include layout="@layout/content_title_layout" />

    <LinearLayout
        android:id="@+id/bsd_lsbj_zhong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bsd_lsbj_body"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bsd_on_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/qb_px_4">

            <LinearLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="@dimen/qb_px_180"
                android:layout_height="@dimen/qb_px_32"
                style="@style/myconditionboxstyle">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/myconditionname"
                    android:text="车牌:" />

                <EditText
                    android:id="@+id/et_cl_chepai"
                    style="@style/myconditionvalue"
                    android:hint="请输入车牌号" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/relativeLayout12"
                android:layout_width="@dimen/qb_px_180"
                android:layout_height="@dimen/qb_px_32"
                android:layout_marginLeft="@dimen/qb_px_10"
                style="@style/myconditionboxstyle">

                <TextView
                    android:id="@+id/textView11"
                    style="@style/myconditionname"
                    android:text="车主:"/>

                <EditText
                    android:id="@+id/et_cl_chezhu"
                    style="@style/myconditionvalue"
                    android:background="@null"
                    android:hint="请输入姓名"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cl_select"
                android:layout_width="@dimen/qb_px_60"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:text="查询"
                style="@style/mysearchconfirmstyle" />
        </LinearLayout>

        <View
            android:id="@+id/bsd_on_xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F7714C"
            android:layout_marginLeft="@dimen/qb_px_4"
            android:layout_marginRight="@dimen/qb_px_4"/>

        <LinearLayout
            android:id="@+id/bsd_lsbj_toubuju"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_30"
            android:layout_below="@+id/bsd_on_xian"
            android:layout_marginTop="@dimen/qb_px_2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qb_px_4"
            android:paddingRight="@dimen/qb_px_4">

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1"
                android:text="车主" />

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1"
                android:text="客户姓名" />

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1.2"
                android:text="日期" />

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1"
                android:text="车牌" />

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1.8"
                android:text="车型" />

            <TextView
                style="@style/mysearchtitlestyle"
                android:layout_weight="1"
                android:text="性质" />
        </LinearLayout>

        <com.ab.view.pullview.AbPullToRefreshView
            android:id="@+id/refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/bsd_lsbj_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/qb_px_4"
                android:paddingRight="@dimen/qb_px_4">

            </ListView>
        </com.ab.view.pullview.AbPullToRefreshView>
    </LinearLayout>

    <include layout="@layout/content_footer_layout" />
</LinearLayout>