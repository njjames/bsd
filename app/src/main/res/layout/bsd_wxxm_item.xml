<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_28"
    android:minHeight="@dimen/qb_px_28"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bsd_xsbj_no"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="项目编码" />

    <TextView
        android:id="@+id/bsd_xsbj_name"
        android:layout_weight="1.2"
        style="@style/mysearchinfostyle"
        android:text="项目名称" />

    <TextView
        android:id="@+id/bsd_kxbj_bzsj"
        android:layout_weight="0.8"
        style="@style/mysearchinfostyle"
        android:text="标准工时"
        android:background="@drawable/biankuang_info_canwrite_bg"/>

    <TextView
        android:id="@+id/bsd_kxbj_gsdj"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="工时单价" />

    <TextView
        android:id="@+id/bsd_kxbj_je"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="金额"
        android:background="@drawable/biankuang_info_canwrite_bg"/>

    <TextView
        android:id="@+id/bsd_ksbj_tv_zt"
        android:layout_weight="0.5"
        style="@style/mysearchinfostyle"
        android:text="状态" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_28"
        android:src="@drawable/ic_delete_maincolor"
        android:padding="@dimen/qb_px_6"
        android:background="@drawable/biankuang_info_bg" />

</LinearLayout>
