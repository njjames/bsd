        style="@style/mysearchinfostyle" />

    <TextView
        android:id="@+id/tv_shuliang"
        android:layout_weight="1"
        android:text="数量"
        style="@style/mysearchinfostyle" />


    <TextView
        android:id="@+id/tv_danjia"
        android:layout_weight="1"
        android:text="单价"
        style="@style/mysearchinfostyle" />

    <TextView
        android:id="@+id/tv_jine"
