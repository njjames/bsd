<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_28"
    android:minHeight="@dimen/qb_px_28"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_wxcl_name"
        android:layout_weight="1"
        android:text="配件名称"
        style="@style/mysearchinfostyle" />

    <TextView
        android:id="@+id/tv_wxcl_th"
        android:layout_weight="1"
        android:text="规格/型号"
        style="@style/mysearchinfostyle" />

    <TextView
        android:id="@+id/tv_wxcl_sl"
        android:layout_weight="1"
        android:text="数量"
        style="@style/mysearchinfostyle" />


    <TextView
        android:id="@+id/tv_wxcl_dj"
        android:layout_weight="1"
        android:text="单价"
        style="@style/mysearchinfostyle" />

    <TextView
        android:id="@+id/tv_wxcl_je"
        android:layout_weight="1"
        android:text="金额"
        style="@style/mysearchinfostyle" />
</LinearLayout>