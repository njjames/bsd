<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <include layout="@layout/content_title_lishi_layout" />

    <RelativeLayout
        android:id="@+id/bsd_lsbj_zhong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/bsd_lsbj_di"
        android:layout_below="@+id/relativeLayout23"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/bsd_lsbj_body"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70">


        <RelativeLayout
            android:id="@+id/relativeLayout3333"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:background="@drawable/bsd_chepaiyuan">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x3"
                android:text="卡号:" />

            <EditText
                android:id="@+id/bsd_huiyuanguanli_sskh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView14"
                android:layout_marginLeft="@dimen/x2"
                android:layout_toEndOf="@+id/textView14"
                android:background="@null"
                android:hint="请输入卡号"
                android:textColorHint="#B1B0B0"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4444"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/bsd_chepaiyuan"
            android:layout_toRightOf="@+id/relativeLayout3333">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x3"
                android:text="卡类型:" />

            <TextView
                android:id="@+id/bsd_hygl_keixing"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView15"
                android:background="@null"
                android:hint="全部"
                android:textColorHint="#000"
                android:textSize="13sp" />
            <ImageView
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y10"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x2"
                android:src="@mipmap/bsd_duoxuan" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_hygl_cx"
            android:layout_width="50dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/y45"
            android:background="@drawable/cundang"
            android:layout_toEndOf="@+id/relativeLayout4444">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="查询"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_hygl_yfdf"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y45"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/bsd_hygl_yfk"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已收款"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bsd_hygl_dfk"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/bsd_hygl_yfk"
                android:gravity="center"
                android:text="待收款"
                android:textSize="16sp" />

        </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/bsd_hygl_zhongview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_top"
            android:background="#F7714C" />

        <View
            android:id="@+id/view22"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/bsd_hygl_zhongview"
            android:layout_marginTop="@dimen/y5"
            android:background="#C9C9C9" />


        <LinearLayout
            android:id="@+id/bsd_rl_xuanxiang1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y45"
            android:layout_below="@+id/view22">

            <RelativeLayout
                android:id="@+id/bsd_xm11"
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="客户名称" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm22"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="电话" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm33"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="卡号" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm44"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="卡名称" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm55"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="办理日期" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm66"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="经办人" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm88"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="积分" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsd_xm99"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:background="@drawable/biankuang_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="剩余金额" />

            </RelativeLayout>

        </LinearLayout>
        <com.ab.view.pullview.AbPullToRefreshView
            android:id="@+id/lsfreshview"
            android:layout_below="@+id/bsd_rl_xuanxiang1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <ListView
            android:id="@+id/bsd_lv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bsd_rl_xuanxiang1">
        </ListView>
        </com.ab.view.pullview.AbPullToRefreshView>

    </RelativeLayout>

    <include layout="@layout/content_footer_layout" />

</LinearLayout>
