<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banbai">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:text="修改工时"
        android:textColor="#7E7E7F"
        android:textSize="18sp" />

    <View
        android:id="@+id/shanghong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:background="#F7714C" />

    <RelativeLayout
        android:id="@+id/bsd_xiugaimma_shang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_below="@+id/shanghong"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y15"
        android:background="@drawable/delg_xgmm">

        <TextView
            android:id="@+id/bsd_xiugaineirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x10"
            android:text="修改工时"
            android:textSize="16sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/bsd_wxyy_gsxiugai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/x5"
            android:textColorHint="#BAB9B9"
            android:singleLine="true"
            android:layout_toEndOf="@+id/bsd_xiugaineirong"
            android:background="@null"
            android:hint="" />

    </RelativeLayout>



    <View
        android:id="@+id/xiahong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bsd_xiugaimma_shang"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y15"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/y20"
        android:layout_below="@+id/xiahong"
        android:layout_marginTop="@dimen/y15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#7E7E7F"
            android:text="确认修改" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F7714C" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#7E7E7F"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="取消" />

    </LinearLayout>

</RelativeLayout>
