<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_28"
    android:minHeight="@dimen/qb_px_28"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bsd_xzcl_name"
        android:layout_weight="1.6"
        style="@style/mysearchinfostyle"
        android:text="姓名" />

        <TextView
            android:id="@+id/bsd_xzcl_shuliang"
            android:layout_weight="2"
            style="@style/mysearchinfostyle"
            android:text="电话" />


        <TextView
            android:id="@+id/bsd_xzcl_danjia"
            android:layout_weight="1.5"
            style="@style/mysearchinfostyle"
            android:text="卡号" />


        <TextView
            android:id="@+id/bsd_xzcl_dw"
            android:layout_weight="2"
            style="@style/mysearchinfostyle"
            android:text="卡名称" />

        <TextView
            android:id="@+id/bsd_xzcl_je"
            android:layout_weight="2"
            style="@style/mysearchinfostyle"
            android:text="办理日期" />


        <TextView
            android:id="@+id/bsd_xzcl_qingxi"
            android:layout_weight="1.5"
            style="@style/mysearchinfostyle"
            android:text="经办人" />


        <TextView
            android:id="@+id/bsd_xzcl_peijian"
            android:layout_weight="1"
            style="@style/mysearchinfostyle"
            android:text="积分" />

        <TextView
            android:id="@+id/bsd_xzcl_shengyujiner"
            android:layout_weight="1.5"
            style="@style/mysearchinfostyle"
            android:text="剩余金额" />
</LinearLayout>
