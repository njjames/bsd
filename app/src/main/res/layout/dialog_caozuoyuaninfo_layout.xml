<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/banbai">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限信息"
        android:textSize="20sp"
        android:padding="@dimen/qb_px_15"
        android:textColor="#444"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/button"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_2"/>

    <TextView
        android:id="@+id/tv_gongsi_gndm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="18sp"
        android:padding="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/cangku_gndm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="18sp"
        android:padding="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/cangkudo_gndm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="18sp"
        android:padding="@dimen/qb_px_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/button"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_2"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确认"
        android:textSize="18sp"
        android:padding="@dimen/qb_px_15"
        android:textColor="@color/button"/>
</LinearLayout>