<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_10">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/bsd_pop_zuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/pop_zuo"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bsd_pop_hong"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_4"
                android:background="@drawable/pop_zuo_top" />

            <RelativeLayout
                android:id="@+id/rl_category_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bsd_pop_shang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:background="@drawable/pop_zuo_zhong"
                    android:gravity="center"
                    android:text="全部项目"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_category_all"
                    android:layout_width="@dimen/qb_px_20"
                    android:layout_height="@dimen/qb_px_20"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_4"/>
            </RelativeLayout>

            <ListView
                android:id="@+id/bsd_wxyy_zuo_pop_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pop_zuo_zhong"
                android:choiceMode="singleChoice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="@drawable/pop_you"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_2"
            android:paddingRight="@dimen/qb_px_2">

            <TextView
                android:id="@+id/bsd_pop_you_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_36"
                android:gravity="center"
                android:text="项目选择"
                android:textSize="20sp" />

            <View
                android:id="@+id/below_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_1"
                android:background="#F7714C" />

            <LinearLayout
                android:id="@+id/bsd_zhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/qb_px_4">

                <LinearLayout
                    android:id="@+id/relativeLayout15"
                    android:layout_marginLeft="@dimen/qb_px_2"
                    style="@style/myeditlinearlayoutstyle">

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/myeditinfonamestyle"
                        android:text="项目名称:" />

                    <EditText
                        android:id="@+id/et_wxxm_name"
                        style="@style/myeditinfovaluestyle"
                        android:hint="请输入项目名称"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_all_wxxm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_32"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/qb_px_10">

                    <ImageView
                        android:id="@+id/bsd_wxyy_pop_im_xiangmu_quanbu"
                        android:layout_width="@dimen/qb_px_22"
                        android:layout_height="@dimen/qb_px_22"
                        android:src="@drawable/ic_checked" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:text="全部项目"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_by_wxxm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_32"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/bsd_wxyy_pop_im_xiangmu_1"
                        android:layout_width="@dimen/qb_px_22"
                        android:layout_height="@dimen/qb_px_22"
                        android:src="@drawable/ic_unchecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:text="保养项目"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wx_wxxm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_32"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/bsd_wxyy_pop_im_xiangmu_2"
                        android:layout_width="@dimen/qb_px_22"
                        android:layout_height="@dimen/qb_px_22"
                        android:src="@drawable/ic_unchecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:text="维修项目"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wjg_wxxm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_32"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/bsd_wxyy_pop_im_xiangmu_3"
                        android:layout_width="@dimen/qb_px_22"
                        android:layout_height="@dimen/qb_px_22"
                        android:src="@drawable/ic_unchecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:text="外加工项目"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/qb_px_70"
                    android:layout_height="@dimen/qb_px_30"
                    android:gravity="center"
                    android:text="查询"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/cundang"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_marginRight="@dimen/qb_px_2"/>
            </LinearLayout>

            <View
                android:id="@+id/bsd_v_zhong"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_1"
                android:background="#F7714C"
                android:layout_marginTop="@dimen/qb_px_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_30">

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1.5"
                    android:text="项目名称"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="标准工时"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="工时单价"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="1"
                    android:text="金额"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/mysearchtitlestyle"
                    android:layout_weight="0.4"
                    android:text="选择"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.ab.view.pullview.AbPullToRefreshView
                android:id="@+id/bsd_wxyy_xm_mPullRefreshView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF">

                <ListView
                    android:id="@+id/bsd_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.ab.view.pullview.AbPullToRefreshView>

            <View
                android:id="@+id/bsd_v_zhong_xia"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F7714C" />

            <TextView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="@dimen/qb_px_34"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/cundang"
                android:layout_marginRight="@dimen/qb_px_4"
                android:layout_marginTop="@dimen/qb_px_4"
                android:layout_marginBottom="@dimen/qb_px_4"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_10">
    </FrameLayout>
</LinearLayout>