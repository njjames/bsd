<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/x20"
    android:paddingBottom="@dimen/x20"
    android:layout_marginLeft="@dimen/x10"
    android:layout_height="@dimen/x80"
    android:gravity="center_vertical">



    <TextView
        android:id="@+id/tv_cxmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/v"
        android:text="车辆名字"
        android:textSize="@dimen/x23"
        android:textColor="@color/hong" />
    <View
        android:id="@+id/v"
        android:layout_width="@dimen/x2"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_centerInParent="true"
        android:background="@color/hong"
        />

    <TextView
        android:id="@+id/tv_cx_nbmc"
        android:layout_toRightOf="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车辆内部名字"
        android:textSize="@dimen/x23"
        android:textColor="@color/hong"
        />


</LinearLayout>