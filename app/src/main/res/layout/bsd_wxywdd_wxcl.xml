<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bsd_lsbj_toubuju"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_30"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1.2"
            style="@style/mysearchtitlestyle"
            android:text="材料名称" />

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="数量" />

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="单价" />

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="单位" />

        <TextView
            android:layout_weight="1"
            style="@style/mysearchtitlestyle"
            android:text="总价" />

        <TextView
            android:layout_weight="0.6"
            style="@style/mysearchtitlestyle"
            android:text="删除" />

        <TextView
            android:layout_weight="0.8"
            style="@style/mysearchtitlestyle"
            android:text="查看库存" />
    </LinearLayout>

    <ListView
        android:id="@+id/bsd_lsbj_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <RelativeLayout
        android:id="@+id/mrkx_xia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_26"
        android:background="@drawable/bsd_xiamianyuan">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_centerVertical="true"
            android:text="合计:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_record_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_toRightOf="@id/tv_total"/>

        <TextView
            android:id="@+id/tv_wxcl_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/qb_px_10"
            android:text="元"
            android:textColor="#F7714C"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
