<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bsd_wxxm1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/bsd_chepaiyuan">

        <TextView
            android:id="@+id/tvxzcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x5"
            android:text="选择材料:" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvxzcl"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginRight="@dimen/x2"
            android:layout_toEndOf="@+id/tvxzcl"
            android:background="@null"
            android:hint="请选择材料"
            android:textColorHint="#B1B0B0"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/y30"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x5"
            android:layout_toEndOf="@+id/textView23"
            android:src="@mipmap/sbd_add" />
    </RelativeLayout>





    <LinearLayout
        android:id="@+id/bsd_lsbj_toubuju"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45"
        android:layout_below="@+id/bsd_wxxm1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y10">

        <RelativeLayout
            android:id="@+id/bsd_xm12"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="材料名称" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_xm22"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="数量" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_xm33"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="单价" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_xm44"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="单位" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_xm55"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="总价" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bsd_xm66"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="操作" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bsd_wxcl_kc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/biankuang_title_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="查看库存" />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/bsd_lsbj_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bsd_lsbj_toubuju">


    </ListView>






</RelativeLayout>
