<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/banbai">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择删除"
        android:textSize="20sp"
        android:padding="@dimen/qb_px_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_2"
        android:background="@color/hong"/>

    <CheckBox
        android:id="@+id/cb_tp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/action_text_color_pressed"
        android:text="图片1"
        android:padding="@dimen/qb_px_16"/>

    <CheckBox
        android:id="@+id/cb_tp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/action_text_color_pressed"
        android:text="图片2"
        android:padding="@dimen/qb_px_16"/>

    <CheckBox
        android:id="@+id/cb_tp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/action_text_color_pressed"
        android:text="图片3"
        android:padding="@dimen/qb_px_16"/>

    <CheckBox
        android:id="@+id/cb_tp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/action_text_color_pressed"
        android:text="图片4"
        android:padding="@dimen/qb_px_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/qb_px_40"
            android:paddingRight="@dimen/qb_px_40"
            android:paddingTop="@dimen/qb_px_10"
            android:paddingBottom="@dimen/qb_px_10"
            android:textSize="18sp"
            android:text="删除" />

        <Button
            android:id="@+id/but_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/qb_px_40"
            android:paddingRight="@dimen/qb_px_40"
            android:paddingTop="@dimen/qb_px_10"
            android:paddingBottom="@dimen/qb_px_10"
            android:textSize="18sp"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>