<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/qb_px_4"
            android:text="草稿单"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/qb_px_2"
            android:layout_marginRight="@dimen/qb_px_6"
            android:background="@drawable/jinchang"
            android:paddingBottom="@dimen/qb_px_6"
            android:paddingLeft="@dimen/qb_px_12"
            android:paddingRight="@dimen/qb_px_12"
            android:paddingTop="@dimen/qb_px_6"
            android:text="关   闭"
            android:textColor="#F7714C"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/below_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_34"
        android:orientation="horizontal">

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="单号" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="1"
            android:text="日期" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="0.5"
            android:text="打开" />

        <TextView
            style="@style/mysearchtitlestyle"
            android:layout_weight="0.5"
            android:text="作废" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_draftbill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/beijing" />
</LinearLayout>
