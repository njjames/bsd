<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_34"
    android:minHeight="@dimen/qb_px_34"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="姓名"/>

    <TextView
        android:id="@+id/tv_dept"
        android:layout_weight="1"
        style="@style/mysearchinfostyle"
        android:text="部门"/>

    <ImageView
        android:id="@+id/iv_paigong"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:src="@drawable/ic_paigong_fail"
        android:background="@drawable/biankuang_info_bg"/>
</LinearLayout>
