<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- 头部 -->
    <RelativeLayout
        android:id="@+id/relativeLayout23"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="#FFFFFF">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="快速报价"
            android:textColor="#636364"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/bsd_lsbj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/y25"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/bsd_lishibaojia" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="历史报价"
                android:textColor="#F7714C"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 头部 结束-->
    <!--中间开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/bsd_lsbj_body"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:layout_below="@+id/relativeLayout23"
        android:layout_above="@+id/bsd_lsbj_di"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x5">
            <ImageView
                android:id="@+id/bsd_im_zdsb"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y260"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/x5"
                android:src="@mipmap/bsd_zdsb" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5">
            <ImageView
                android:id="@+id/bsd_im_sdsr"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y260"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:src="@mipmap/bsd_sdsr" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/x5">
            <ImageView
                android:id="@+id/bsd_im_xcbsb"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y260"
                android:scaleType="fitXY"
                android:src="@mipmap/bsd_xcbsb" />
        </LinearLayout>

    </LinearLayout>
    <!--中间结束-->

    <!--最下面的小文字 -->
    <RelativeLayout
        android:id="@+id/bsd_lsbj_di"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/bsd_01_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="售后服务电话: 0311-83998032      保修 (非工作时间) : 15176436937   13930122976" />
    </RelativeLayout>


</RelativeLayout>
