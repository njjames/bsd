<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/banbai"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_10"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="#7E7E7F"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/qb_px_4"
        android:layout_marginRight="@dimen/qb_px_4"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_16"
        android:layout_marginRight="@dimen/qb_px_16"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@drawable/delg_xgmm"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/qb_px_25"
            android:layout_height="@dimen/qb_px_25"
            android:layout_marginStart="@dimen/qb_px_20"
            android:src="@drawable/ic_changpsw_gray" />

        <EditText
            android:id="@+id/et_xiugaimima_yuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/qb_px_6"
            android:layout_marginRight="@dimen/qb_px_20"
            android:hint="请输入原密码"
            android:textColorHint="#BAB9B9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bsd_xiugaimma_shang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_16"
        android:layout_marginRight="@dimen/qb_px_16"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@drawable/delg_xgmm"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/qb_px_25"
            android:layout_height="@dimen/qb_px_25"
            android:layout_marginStart="@dimen/qb_px_20"
            android:src="@drawable/ic_changpsw_gray" />

        <EditText
            android:id="@+id/et_xiugaimima_xin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/qb_px_6"
            android:layout_marginRight="@dimen/qb_px_20"
            android:hint="请输入新密码"
            android:textColorHint="#BAB9B9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bsd_xiugaimiam_xia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_16"
        android:layout_marginRight="@dimen/qb_px_16"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@drawable/delg_xgmm"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/qb_px_25"
            android:layout_height="@dimen/qb_px_25"
            android:layout_marginStart="@dimen/qb_px_20"
            android:src="@drawable/ic_changpsw_gray" />

        <EditText
            android:id="@+id/et_xiugaimima_xintoo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/qb_px_6"
            android:layout_marginRight="@dimen/qb_px_20"
            android:hint="请确认新密码"
            android:textColorHint="#BAB9B9" />
    </LinearLayout>

    <View
        android:id="@+id/xiahong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/qb_px_4"
        android:layout_marginRight="@dimen/qb_px_4"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_44"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="#7E7E7F"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F7714C"
            android:layout_marginBottom="@dimen/qb_px_4"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_44"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#7E7E7F"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
