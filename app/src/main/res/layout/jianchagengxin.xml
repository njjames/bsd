<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/banbai"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/qb_px_20"
    android:paddingLeft="@dimen/qb_px_20"
    android:paddingRight="@dimen/qb_px_20">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jianchagengxin" />

    <TextView
        android:id="@+id/tv_currentVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:gravity="center"
        android:text="222"
        android:textColor="#7E7E7F"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_newVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_15"
        android:gravity="center"
        android:text="111"
        android:textColor="#7E7E7F"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/qb_px_15"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#F7714C"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F7714C"
            android:layout_marginBottom="@dimen/qb_px_8"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/qb_px_15"
            android:gravity="center"
            android:text="取消"
            android:textColor="#F7714C"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
