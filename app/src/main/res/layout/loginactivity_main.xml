<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/qb_px_400"
            android:layout_height="@dimen/qb_px_80"
            android:src="@drawable/font"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/bsd_log_wzzl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/qb_px_30"
            android:text="IP设置 "
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="@dimen/qb_px_10"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/qb_px_300"
            android:layout_height="@dimen/qb_px_400"
            android:src="@drawable/icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66000000"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_40"
            android:paddingRight="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_70">

            <ImageView
                android:layout_width="@dimen/qb_px_250"
                android:layout_height="@dimen/qb_px_70"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qb_px_10"
                android:src="@drawable/top_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_1"
                android:layout_marginTop="@dimen/qb_px_4"
                android:background="#fff" />

            <RelativeLayout
                android:id="@+id/bsd_rl_bm"
                android:layout_width="@dimen/qb_px_250"
                android:layout_height="@dimen/qb_px_50"
                android:onClick="clk_bumen"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@drawable/login_item_border">

                <ImageView
                    android:id="@+id/iv_gongsi"
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_30"
                    android:src="@drawable/ic_gongsi"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/bst_text_gs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请选择公司"
                    android:layout_toRightOf="@id/iv_gongsi"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_marginLeft="@dimen/qb_px_4"/>

                <ImageView
                    android:layout_width="@dimen/qb_px_16"
                    android:layout_height="@dimen/qb_px_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:src="@drawable/ic_down_white" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bsd_rl_user"
                android:layout_width="@dimen/qb_px_250"
                android:layout_height="@dimen/qb_px_50"
                android:onClick="bsd_dluser"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@drawable/login_item_border">

                <ImageView
                    android:id="@+id/iv_czy"
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_30"
                    android:src="@drawable/ic_czy"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/bsd_tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/qb_px_4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_czy"
                    android:hint="请选择用户"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"/>

                <ImageView
                    android:layout_width="@dimen/qb_px_16"
                    android:layout_height="@dimen/qb_px_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:src="@drawable/ic_down_white" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/qb_px_250"
                android:layout_height="@dimen/qb_px_50"
                android:layout_alignStart="@+id/bsd_rl_user"
                android:layout_below="@+id/bsd_rl_user"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@drawable/login_item_border">

                <ImageView
                    android:id="@+id/iv_pass"
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_30"
                    android:src="@drawable/ic_pass"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/bsd_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_4"
                    android:layout_toRightOf="@id/iv_pass"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:onClick="bsd_qiehuan"
                android:layout_width="@dimen/qb_px_250"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_6"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/qb_px_4">

                <ImageView
                    android:id="@+id/bsd_im_jizhumima"
                    android:layout_width="@dimen/qb_px_16"
                    android:layout_height="@dimen/qb_px_16"
                    android:src="@drawable/bsd_no"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bsd_im_jizhumima"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:text="记住登录名"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/qb_px_230"
                android:layout_height="@dimen/qb_px_50"
                android:layout_marginTop="@dimen/qb_px_6"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:text="登录"
                android:onClick="bsd_login"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text18" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_registe_phone"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            android:src="@drawable/ic_registe_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_10"/>

        <TextView
            android:id="@+id/bsd_sbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qb_px_15"
            android:background="#fff"
            android:text="设备id为空"
            android:textSize="@dimen/text16"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
