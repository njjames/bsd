<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_32"
    android:minHeight="@dimen/qb_px_32"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_billNo"
        style="@style/mysearchinfostyle"
        android:layout_weight="1"
        android:text="单号" />

    <TextView
        android:id="@+id/tv_billrq"
        style="@style/mysearchinfostyle"
        android:layout_weight="1"
        android:text="日期" />

    <ImageView
        android:id="@+id/iv_open"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_32"
        android:layout_weight="0.5"
        android:src="@drawable/ic_open"
        android:background="@drawable/biankuang_info_bg"
        android:padding="@dimen/qb_px_2"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_32"
        android:layout_weight="0.5"
        android:padding="@dimen/qb_px_4"
        android:src="@drawable/ic_delete_maincolor"
        android:background="@drawable/biankuang_info_bg"/>
</LinearLayout>
