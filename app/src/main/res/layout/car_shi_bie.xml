<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banbai">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginTop="@dimen/y30"
        android:gravity="center"
        android:text="确认车牌信息"
        android:textSize="20sp"
        android:textColor="#7E7E7F" />


    <TextView
        android:id="@+id/bsd_xiugaimma_shang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y5"
        android:gravity="center"
        android:text="车牌号为"
        android:textColor="#7E7E7F"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/bsd_xiugaimiam_xia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_below="@+id/bsd_xiugaimma_shang"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y5"
        android:gravity="center"
        android:text=""
        android:textColor="#7E7E7F"
        android:textSize="18sp"
        android:background="@null" />


    <View
        android:id="@+id/xiahong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bsd_xiugaimiam_xia"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y5"
        android:background="#F7714C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xiahong"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#F7714C"
            android:textSize="18dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F7714C" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改"
            android:textColor="#F7714C"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>
