<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_title_back_no_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bodyshangyuan"
        android:orientation="vertical"
        android:paddingLeft="@dimen/qb_px_4"
        android:paddingRight="@dimen/qb_px_4"
        android:paddingTop="@dimen/qb_px_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="0dp"
                android:layout_height="@dimen/y45"
                android:layout_weight="1"
                android:background="@drawable/bsd_chepaiyuan">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/myeditinfonamestyle"
                    android:text="车牌:" />

                <TextView
                    android:id="@+id/bsd_wxjd_chepai"
                    style="@style/myeditinfovaluestyle"
                    android:hint="请输入车牌号" />

            </LinearLayout>

            <LinearLayout
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/myeditinfonamestyle"
                    android:text="品牌:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_pinpai"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择品牌" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_ksbj_RLchexi"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/myeditinfonamestyle"
                    android:text="车系:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_chexi"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车系" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_ksbj_chezu"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="1.2">

                <TextView
                    android:id="@+id/textView16"
                    style="@style/myeditinfonamestyle"
                    android:text="车组:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_chezu"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车组" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_ksbj_rl_chexing"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/myeditinfonamestyle"
                    android:text="车型:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_chexing"
                    style="@style/myeditinfomarqeestyle"
                    android:hint="请选择车型" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relativeLayout20"
                style="@style/myeditlinearlayoutstyle">

                <TextView
                    android:id="@+id/textView13"
                    style="@style/myeditinfonamestyle"
                    android:text="VIN:" />

                <TextView
                    android:id="@+id/bsd_wxjd_vin"
                    style="@style/myeditinfovaluestyle"
                    android:hint="请输入VIN号" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout9"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/myeditinfonamestyle"
                    android:text="里程:" />

                <TextView
                    android:id="@+id/bsd_wxjd_jinchanglicheng"
                    style="@style/myeditinfovaluestyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout10"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/myeditinfonamestyle"
                    android:text="司机/车主:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_name"
                    style="@style/myeditinfomarqeestyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout12"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/textView11"
                    style="@style/myeditinfonamestyle"
                    android:text="手机:" />

                <TextView
                    android:id="@+id/bsd_wxjd_shouji"
                    style="@style/myeditinfovaluestyle" />
            </LinearLayout>

            <LinearLayout
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="1">

                <TextView
                    style="@style/myeditinfonamestyle"
                    android:text="接单日期:" />

                <com.example.administrator.boshide2.Modular.View.MarqueeView
                    android:id="@+id/bsd_wxjd_jdrq"
                    style="@style/myeditinfomarqeestyle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_4">

            <LinearLayout
                android:id="@+id/relativeLayout23"
                style="@style/myeditlinearlayoutstyle">

                <TextView
                    android:id="@+id/textView19"
                    style="@style/myeditinfonamestyle"
                    android:text="会员卡号:" />

                <TextView
                    android:id="@+id/bsd_wxjd_huiyuan"
                    style="@style/myeditinfovaluestyle"
                    android:hint="请输入会员卡号" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bsd_wxjd_rl_gsfl"
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/textView18"
                    style="@style/myeditinfonamestyle"
                    android:text="工时费率:" />

                <TextView
                    android:id="@+id/bsd_wxjd_gsfl"
                    style="@style/myeditinfovaluestyle" />
            </LinearLayout>

            <LinearLayout
                style="@style/myeditlinearlayoutstyle"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/myeditinfonamestyle"
                    android:text="合计 :" />

                <TextView
                    android:id="@+id/tv_wxjd_hj"
                    style="@style/myeditinfovaluestyle"
                    android:text="元"
                    android:textColor="#F7714C"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </FrameLayout>
        </LinearLayout>
        <View
            android:id="@+id/bsd_on_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginTop="@dimen/qb_px_2"
            android:background="#F7714C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bsd_rl_xuanxiang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_30"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1.2"
                        android:text="项目" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="工时" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="工时单价" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="总计金额" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="状态" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_wxxm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_26"
                    android:background="@drawable/bsd_xiamianyuan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_10"
                        android:text="合计:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_wxxm_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_weight="1"
                        android:text="(共0条记录)"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_wxjd_xmhj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_10"
                        android:text="元"
                        android:textColor="#F7714C"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/bsd_onzhongjian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_1"
                android:layout_marginTop="@dimen/qb_px_1"
                android:background="#F7714C" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bsd_rl_xuanxiang1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_30"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1.2"
                        android:text="材料名称" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="数量" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="单价" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="单位" />

                    <TextView
                        style="@style/mysearchtitlestyle"
                        android:layout_weight="1"
                        android:text="总价" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_wxcl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_26"
                    android:background="@drawable/bsd_xiamianyuan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_10"
                        android:text="合计:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_wxcl_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_weight="1"
                        android:text="(共0条记录)"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_wxjd_clhj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/qb_px_10"
                        android:text="元"
                        android:textColor="#F7714C"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/content_footer_layout" />
</LinearLayout>
